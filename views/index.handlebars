<nav class="navbar bg-dark">
    <img src="./assets/img/burger.jpeg"  class = "d-inline-bock align-top mx-auto">
</nav>

<div class="container my-5">
    <div class = "row">
        <div class="col">
            <div class="card">
                <div class="card-header text-center">
                    WISH TO EAT LIST:
                </div>
                <div class="row">
                    {{#each wiskToEat}}
                        <div class="col-md-8 text-center burgerText">
                            {{this.name}}
                        </div>
                        <div class="col-md-4">
                            <button data-id="{{this.id}}" class="devourBurger">Devour it!</button>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-header text-center">
                Devoured List:
            </div>
            <div class="row">
                {{#each devoured}}
                    <div class="col-md-12 text-center burgerText">
                        {{this.name}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
        <div class="row mt-5">
            <div class="col-md-6 offset-md-3">
                <form class="create-form">
                    <input type="text" id="burgerName" size="40">
                    <button type="submit">Submit</button>
                </form>
                <p>Enter a burger you want to eat and click the "Submit" button.</p>
            </div>
        </div>
    
</div>